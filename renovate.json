{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "maven",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "maven",
      "versioningTemplate": "maven",
      "fileMatch": ["(^|/)pom\\.xml$"],
      "matchStrings": [
        "#\\s?renovate: image=(?<depName>.*?)\\s?appVersion:\\s?\\\"?(?<currentValue>[\\w+\\.\\-]*)\""
      ]
    }
  ]
}
