<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:rep="internal"
    jcr:mixinTypes="[rep:AccessControllable]"
    jcr:primaryType="cq:Page">
    <rep:policy/>
    <wcm jcr:primaryType="nt:unstructured">
        <foundation jcr:primaryType="nt:unstructured">
            <components jcr:primaryType="nt:unstructured">
                <responsivegrid jcr:primaryType="nt:unstructured">
                    <root-container
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Root Container"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[/libs/wcm/foundation/components/responsivegrid,/apps/${projectName}/core/components/content/carousel,/apps/${projectName}/core/components/content/image,/apps/${projectName}/core/components/structure/imprint]">
                        <jcr:content jcr:primaryType="nt:unstructured"/>
                    </root-container>
                    <content-container
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content Container"
                        sling:resourceType="wcm/core/components/policy/policy"
                        components="[/apps/${projectName}/core/components/content/image,/apps/${projectName}/core/components/content/text,/apps/${projectName}/core/components/content/title]">
                        <jcr:content jcr:primaryType="nt:unstructured"/>
                        <cq:authoring jcr:primaryType="nt:unstructured">
                            <assetToComponentMapping jcr:primaryType="nt:unstructured">
                                <image
                                    jcr:primaryType="nt:unstructured"
                                    assetGroup="media"
                                    assetMimetype="[image/gif,image/jpeg,image/png]"
                                    droptarget="image"
                                    resourceType="${projectName}/core/components/content/image"/>
                            </assetToComponentMapping>
                        </cq:authoring>
                    </content-container>
                </responsivegrid>
            </components>
        </foundation>
    </wcm>
</jcr:root>
